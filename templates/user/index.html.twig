{% extends 'base.html.twig' %}

{% block body %}
<div class="row row-cols-1 row-cols-md-2 bg-light">
    {% for event in events %}
        <div class="col mb-4">
            <div class="card">
                <img src="{{ event.image }}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h2 class="card-title">{{ event.name }}</h2>
                    <h5>{{ event.adress }}</h5>
                    <p class="text-muted">{{ event.date ? event.date|date('Y-m-d') : '' }}</p>
                    <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                </div>
                <a href="{{ path('user_show', {'id': event.id}) }}" class="btn btn-info btn-lg btn-block" role="button" aria-pressed="true">GET ME THERE!</a>
            </div>
        </div>
        
    {% endfor %}
</div>
{% endblock %}
